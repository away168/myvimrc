" show line numbers
set number
set wrap
set guifont=SourceCodeProForPowerline-Regular:h14 

syntax on
" ignorecase when searching
set ignorecase

filetype indent on

set paste

" set tab width and autoindents
set autoindent
set smartindent
set tabstop=2 softtabstop=0 expandtab shiftwidth=2 smarttab

colorscheme default
